{
  "compilerOptions": {
    /* module settings */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",

    /* build settings */
    "outDir": "dist",
    "declaration": true,

    /* code settings */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,

    /* custom import paths */
    "paths": {
      "@lib/*": ["./lib/*"]
    }
  }
}
